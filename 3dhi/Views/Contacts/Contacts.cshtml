@model _3dhi.Models.ViewModels.ContactUsMessageViewModel
@{
    ViewData["Title"] = "Contacts";
}

<div class="text-center">
    <h1 class="ContactUs">Контакти</h1>

</div>
<div class="text-left">

    <p>Свържете се с нас:</p>
    <p>Телефон: 0876691191.</p>
    <p>Имейл: example@gmail.com.</p>

</div>
<form>
    <div>
        <p><Или ни оставете съобщение и ние ще Ви отговорим:</p>
        <label asp-for="SenderName"></label>
        <input asp-for="SenderName" />
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
    </div>
    <div>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
    </div>
    <div>
        <label asp-for="Message"></label>
        <textarea asp-for="Message" rows="6">        </textarea>
    </div>
</form>